{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "org.volumio.remote",
  "version": "1.1.1",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#11100f",
  "name": {
    "en": "Volumio",
    "nl": "Volumio"
  },
  "description": {
    "en": "All your music in one place",
    "nl": "Al je muziek op een plaats"
  },
  "category": [
    "music"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Paul Heetebrij"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "paulheetebrij"
      }
    }
  },
  "source": "https://github.com/paulheetebrij/org.volumio.remote",
  "api": {
    "volumiostatus": {
      "method": "POST",
      "path": "/:id",
      "public": true
    }
  },
  "flow": {
    "triggers": [
      {
        "id": "no-results",
        "title": {
          "en": "No results",
          "nl": "Geen resultaat"
        },
        "tokens": [
          {
            "type": "string",
            "name": "class",
            "title": {
              "en": "subject",
              "nl": "soort"
            }
          },
          {
            "type": "string",
            "name": "wildcard",
            "title": {
              "en": "wildcard supplied",
              "nl": "gebruikte zoekterm"
            }
          }
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "device-offline",
        "title": {
          "en": "Volumio audio player unreachable",
          "nl": "Volumio speler niet bereikbaar"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "device-online",
        "title": {
          "en": "Volumio audio player online again",
          "nl": "Volumio speler weer bereikbaar"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "clear-queue",
        "title": {
          "en": "Clear queue",
          "nl": "Maak wachtrij leeg"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "play-playlist",
        "title": {
          "en": "Play playlist",
          "nl": "Speel afspeellijst af"
        },
        "titleFormatted": {
          "en": "Play playlist [[wildcard]]",
          "nl": "Speel afspeellijst [[wildcard]] af"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "text",
            "name": "wildcard",
            "placeholder": {
              "en": "Piano",
              "nl": "Piano"
            }
          }
        ]
      },
      {
        "id": "play-tracks-by-title",
        "title": {
          "en": "Play tracks by title",
          "nl": "Speel tracks met titel"
        },
        "titleFormatted": {
          "en": "Play tracks by title [[wildcard]]",
          "nl": "Speel tracks met titel [[wildcard]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "text",
            "name": "wildcard",
            "placeholder": {
              "en": "Round Midnight",
              "nl": "Liefde"
            }
          }
        ]
      },
      {
        "id": "play-favourites",
        "title": {
          "en": "Play track from favourites",
          "nl": "Speel alle favorieten"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "play-all-from-artist",
        "title": {
          "en": "Play every track from artist",
          "nl": "Speel alles af van artiest"
        },
        "titleFormatted": {
          "en": "Play every track from [[artist]]",
          "nl": "Speel alles van [[artist]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "autocomplete",
            "name": "artist",
            "placeholder": {
              "en": "Frank Zappa",
              "nl": "Jantje Koopmans"
            }
          }
        ]
      },
      {
        "id": "play-album",
        "title": {
          "en": "Play album",
          "nl": "Speel album"
        },
        "titleFormatted": {
          "en": "Play album [[album]]",
          "nl": "Speel album [[album]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "autocomplete",
            "name": "album",
            "placeholder": {
              "en": "Ogdens' Nut Gone Flake",
              "nl": "Zijn Grootste Successen (tot nu toe)"
            }
          }
        ]
      },
      {
        "id": "queue-all-artists-from-genre",
        "title": {
          "en": "Queue all artists from genre",
          "nl": "Plaats alle artiesten van muziekstijl in wachtrij"
        },
        "titleFormatted": {
          "en": "Queue every artist genre [[genre]]",
          "nl": "Plaats alle artiesten van muziekstijl [[genre]] in wachtrij"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "autocomplete",
            "name": "genre",
            "placeholder": {
              "en": "Blues",
              "nl": "Dance"
            }
          }
        ]
      },
      {
        "id": "queue-all-albums-from-genre",
        "title": {
          "en": "Queue all albums from genre",
          "nl": "Plaats alle albums van muziekstijl in wachtrij"
        },
        "titleFormatted": {
          "en": "Queue every album from genre [[genre]]",
          "nl": "Plaats alle albums van muziekstijl [[genre]] in wachtrij"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "autocomplete",
            "name": "genre",
            "placeholder": {
              "en": "Bluegrass",
              "nl": "Nederpop"
            }
          }
        ]
      },
      {
        "id": "queue-all-albums-from-year",
        "title": {
          "en": "Queue all albums from year",
          "nl": "Plaats alle albums van jaar in wachtrij"
        },
        "titleFormatted": {
          "en": "Queue every album from year [[year]]",
          "nl": "Plaats alle albums van jaar [[year]] in wachtrij"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "number",
            "name": "year",
            "placeholder": {
              "en": "2006",
              "nl": "1970",
              "min": "1900",
              "max": "2100",
              "step": "1"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Volumio Music Player",
        "nl": "Volumio Audio Speler"
      },
      "class": "speaker",
      "capabilities": [
        "speaker_album",
        "speaker_artist",
        "speaker_track",
        "speaker_duration",
        "speaker_playing",
        "speaker_position",
        "speaker_shuffle",
        "speaker_prev",
        "speaker_next",
        "volume_set",
        "volume_up",
        "volume_down",
        "volume_mute"
      ],
      "images": {
        "small": "/drivers/music-player/assets/images/small.png",
        "large": "/drivers/music-player/assets/images/large.png",
        "xlarge": "/drivers/music-player/assets/images/xlarge.png"
      },
      "discovery": "volumio",
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "music-player"
    }
  ],
  "discovery": {
    "volumio": {
      "type": "mdns-sd",
      "mdns-sd": {
        "protocol": "tcp",
        "name": "Volumio"
      },
      "id": "{{name}}"
    }
  }
}