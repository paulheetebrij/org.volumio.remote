  "brandColor": "#11100f",
  "name": {
    "en": "Volumio",
    "nl": "Volumio"
  },
  "description": {
    "en": "Control your Volumio player with Homey",
    "nl": "Bestuur je Volumio speler met Homey"
  },
  "category": [
    "music"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png"
  },
  "author": {
    "name": "Paul Heetebrij"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "http://paypal.me/paulheetebrij"
      }
    }
  },
  "source": "https://github.com/paulheetebrij/org.volumio.remote",
  "flow": {
    "conditions": [
      {
        "id": "is-playing",
        "title": {
          "en": "!{{Is|Isn't}} playing",
          "nl": "Is !{{aan|niet aan}} het afspelen"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "play",
        "title": {
          "en": "play",
          "nl": "afspelen"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "stop",
        "title": {
          "en": "stop",
          "nl": "stoppen"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "pause-player",
        "title": {
          "en": "pause",
          "nl": "pauzeren"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "next-track",
        "title": {
          "en": "Next",
          "nl": "Volgende"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "previous-track",
        "title": {
          "en": "Previous",
          "nl": "Vorige"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "shuffle-on",
        "title": {
          "en": "Shuffle on",
          "nl": "Willekeurig aan"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "shuffle-off",
        "title": {
          "en": "Shuffle off",
          "nl": "Willekeurig uit"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "toggle-repeat",
        "title": {
          "en": "toggle repeat"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "toggle-shuffle",
        "title": {
          "en": "toggle shuffle"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "play-list",
        "title": {
          "en": "Play playlist",
          "nl": "Speel afspeellijst af"
        },
        "titleFormatted": {
          "en": "Play playlist [[title]]",
          "nl": "Speel afspeellijst [[title]] af"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "text",
            "name": "title",
            "placeholder": {
              "en": "title",
              "nl": "titel"
            }
          }
        ]
      },
      {
        "id": "set-volume",
        "title": {
          "en": "Set volume",
          "nl": "Pas geluidssterkte aan"
        },
        "titleFormatted": {
          "en": "Volume to [[level]]%",
          "nl": "Geluidssterkte naar [[level]]%"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "number",
            "name": "level",
            "placeholder": {
              "en": "level",
              "nl": "niveau"
            },
            "min": 0,
            "max": 100,
            "step": 1
          }
        ]
      },
      {
        "id": "mute",
        "title": {
          "en": "mute",
          "nl": "stil"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "unmute",
        "title": {
          "en": "unmute",
          "nl": "niet stil"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Music Player",
        "nl": "Muziek Speler"
      },
      "class": "speaker",
      "capabilities": [
        "speaker_album",
        "speaker_artist",
        "speaker_track",
        "speaker_duration",
        "speaker_playing",
        "speaker_position",
        "speaker_shuffle",
        "speaker_prev",
        "speaker_next",
        "volume_set",
        "volume_up",
        "volume_down",
        "volume_mute"
      ],
      "images": {
        "small": "/drivers/music-player/assets/images/small.png",
        "large": "/drivers/music-player/assets/images/large.png",
        "xlarge": "/drivers/music-player/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "music-player"
    }
  ]
}