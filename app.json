{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "org.volumio.remote",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Volumio"
  },
  "description": {
    "en": "Bestuur je Volumio speler met Homey"
  },
  "category": [
    "music"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Paul Heetebrij",
    "email": "paul.heetebrij@freedom.nl"
  },
  "flow": {
    "triggers": [
      {
        "id": "the-status-has-been-changed",
        "title": {
          "en": "the status has been changed"
        },
        "tokens": [
          {
            "type": "string",
            "name": "status",
            "title": {
              "en": "status"
            },
            "example": {
              "en": "playing status of the music-player"
            }
          },
          {
            "type": "string",
            "name": "track",
            "title": {
              "en": "track"
            },
            "example": {
              "en": "The current track"
            }
          },
          {
            "type": "string",
            "name": "artist",
            "title": {
              "en": "artist"
            },
            "example": {
              "en": "The current artist"
            }
          },
          {
            "type": "string",
            "name": "album",
            "title": {
              "en": "album"
            },
            "example": {
              "en": "The current album"
            }
          }
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "play",
        "title": {
          "en": "play",
          "nl": "afspelen"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "stop",
        "title": {
          "en": "stop",
          "nl": "stoppen"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "pause-player",
        "title": {
          "en": "pause",
          "nl": "pauzeren"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "toggle-repeat",
        "title": {
          "en": "toggle repeat"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "toggle-shuffle",
        "title": {
          "en": "toggle shuffle"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "set-volume",
        "title": {
          "en": "set volume",
          "nl": "pas geluidssterkte aan"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "number",
            "name": "level",
            "placeholder": {
              "en": "level",
              "nl": "niveau"
            },
            "min": 0,
            "max": 100,
            "step": 1
          }
        ]
      },
      {
        "id": "mute",
        "title": {
          "en": "mute",
          "nl": "stil"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      },
      {
        "id": "unmute",
        "title": {
          "en": "unmute",
          "nl": "niet stil"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Music Player"
      },
      "class": "speaker",
      "capabilities": [
        "speaker_album",
        "speaker_artist",
        "speaker_track",
        "speaker_duration",
        "speaker_playing",
        "speaker_position",
        "speaker_prev",
        "speaker_next",
        "volume_set",
        "volume_up",
        "volume_down",
        "volume_mute"
      ],
      "images": {
        "small": "/drivers/music-player/assets/images/small.png",
        "large": "/drivers/music-player/assets/images/large.png",
        "xlarge": "/drivers/music-player/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "music-player"
    }
  ]
}