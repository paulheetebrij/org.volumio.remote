{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "org.volumio.remote",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#11100f",
  "name": {
    "en": "Volumio",
    "nl": "Volumio"
  },
  "description": {
    "en": "Control your Volumio player with Homey",
    "nl": "Bestuur je Volumio speler met Homey"
  },
  "category": [
    "music"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Paul Heetebrij"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "http://paypal.me/paulheetebrij"
      }
    }
  },
  "source": "https://github.com/paulheetebrij/org.volumio.remote",
  "flow": {
    "actions": [
      {
        "id": "play-playlist",
        "title": {
          "en": "Play playlist",
          "nl": "Speel afspeellijst af"
        },
        "titleFormatted": {
          "en": "Play playlist [[title]]",
          "nl": "Speel afspeellijst [[title]] af"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=music-player"
          },
          {
            "type": "text",
            "name": "title",
            "placeholder": {
              "en": "title",
              "nl": "titel"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Volumio Audio Player",
        "nl": "Volumio Audio Speler"
      },
      "class": "speaker",
      "capabilities": [
        "speaker_album",
        "speaker_artist",
        "speaker_track",
        "speaker_duration",
        "speaker_playing",
        "speaker_position",
        "speaker_shuffle",
        "speaker_prev",
        "speaker_next",
        "volume_set",
        "volume_up",
        "volume_down",
        "volume_mute"
      ],
      "images": {
        "small": "/drivers/music-player/assets/images/small.png",
        "large": "/drivers/music-player/assets/images/large.png",
        "xlarge": "/drivers/music-player/assets/images/xlarge.png"
      },
      "discovery": "volumio",
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "music-player"
    }
  ],
  "discovery": {
    "volumio": {
      "type": "mdns-sd",
      "mdns-sd": {
        "protocol": "tcp",
        "name": "Volumio"
      }
    }
  }
}